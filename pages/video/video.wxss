/* pages/video/video.wxss */
  /* 导航 */
  .bf {
    padding: 0 50rpx;
    font-size: 38rpx;
    line-height: 75rpx;
    display: flex;
  }

  .bf .iconfont{
    margin-top: 5rpx;
    width:70rpx;
    font-size: 40rpx;
  }

  .bf .zzbf{
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #d43c33;
  }

  .navScroll {
    display: flex;
    white-space: nowrap;
    height: 70rpx;
  }

  .navScroll .navItem {
    padding: 0 20rpx;
    font-size: 35rpx;
    height: 60rpx;
    line-height: 75rpx;
    box-sizing: border-box;
  }

  .navItem .navContent {
    height: 65rpx;
    box-sizing: border-box;
  }

  .navItem .active {
    border-bottom: 2rpx solid #d43c33;
  }

  /* 视频 */
  .videoScroll{
    margin-top: 10rpx;
    /* 动态计算css宽高 1vh表示1%的高度 */
    height: calc(100vh);
  }

  .videoItem {
    padding: 25rpx;
  }

  .videoItem video {
    width: 100%;  
    height: 360rpx;
    border-radius: 10rpx;
  }

  .videoItem .common {
    width: 100%;  
    height: 360rpx;
    border-radius: 10rpx;
  }
  
  .videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* footer */
  .footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
  }
  
  .footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
  }
  
  .footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
  }
  
  .footer .comments_praised {
    float: right;
  }
  
  .comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
  }
  
  .comments_praised .btn:after {
    border: none;
  }
  
  .comments_praised .item {
    margin-left: 50rpx;
    position: relative;
  }
  
  .comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
  }
  
  ::-webkit-scrollbar{
    display: none;
    width: 0;
    height: 0;
    color: transparent;
  }