/* pages/playlist/playlist.wxss */
/* 头部 */
.listSongContainer .header .bf {
  position: absolute;
  width: 100%;
  height: 75rpx;
  padding: 0 50rpx;
  font-size: 38rpx;
  line-height: 75rpx;
  display: flex;
  background: #fff;
}

.bf .iconfont{
  margin-top: 5rpx;
  width:70rpx;
  font-size: 40rpx;
}

.bf .zzbf{
  max-width: 600rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #d43c33;
}

.listSongContainer .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.listSongContainer .header image {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  width: 800rpx;
  height: 800rpx;
}

.listSongContainer .header .discribe {
  position: absolute;
  left: 30%;
  top:28%;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 80rpx;
  color: #eee;
  font-size: 30rpx;
}

/* 列表 */
.ListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}

.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}

.listHeader .changeMore {
  float: right;
}

/* 歌曲 */
.listScroll {
  height: calc(100vh - 380rpx);/*整体高度减去除了scroll-view的元素的高度，即可得到只使得scroll-view元素滑动效果*/
}

.scrollItem {
  display: flex;
  position: relative;
  margin-bottom: 20rpx;
}

.scrollItem image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 8rpx;
}

.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  max-width: 400rpx;/*最长文本长度*/
  white-space: nowrap;/*不允许换行*/
  overflow: hidden;/*超过部分隐藏*/
  text-overflow: ellipsis;/*超过部分换为省略号*/
}

.scrollItem .iconfont{
  position: absolute;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
  text-align: right;
}

::-webkit-scrollbar{
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}